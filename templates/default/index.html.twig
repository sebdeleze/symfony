{% extends 'base.html.twig' %}

{% block title -%}Homepage{%- endblock %}{% block body %}
<div class="container p-5">
    <h1>Test website.</h1>
    <div class="card border-primary text-primary my-3">
        <div class="card-body">
            This is a test website for deployment to Infomaniak public cloud
        </div>
    </div>
    <div class="my-3">
        <div {{ vue_component('Button', { text: 'See TODOs', type: 'warning', link: path('app_default_todos') } ) }}>
            Loading...
        </div>
    </div>
    <h2 class="mt-4">Response from ES</h2>
    <pre>{{ es }}</pre>

    <div data-controller="hello">
        <div class="d-flex">
            <input class="form-control me-4" data-hello-target="name" type="text">
            <button class="btn btn-primary" data-action="click->hello#greet">
                Greet
            </button>
        </div>
        <div class="alert alert-info mt-2" data-hello-target="output"></div>
    </div>
</div>{% endblock %}
